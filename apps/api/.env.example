# Mommy AI API Environment Variables
# Copy this file to .env and fill in your values

# Supabase (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI (Optional - recommended for best responses)
OPENAI_API_KEY=your-openai-api-key

# HuggingFace (Optional - fallback)
HUGGING_FACE_TOKEN=your-huggingface-token

# Ollama (Optional - local LLM, highest priority if available)
# Comma-separated list of endpoints to try
OLLAMA_ENDPOINTS=http://localhost:11434/api/generate

# Server Configuration
PORT=3001
CORS_ORIGIN=*
